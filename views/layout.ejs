<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reseptiguru</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lato:wght@400;700&family=Caveat&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
    <%- style %>
  </head>
  <body>
    <header>
      <nav>
        <div class="nav-left">
          <a href="/" class="logo">
            <img src="/reseptiguru-logo.png" alt="Logo" class="logo-img" />
            <span class="logo-text">ReseptiGuru</span>
          </a>
          
        </div>
        <button class="hamburger" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <ul class="nav-menu">
          <li><a href="/">Home</a></li>
          <% if (locals.user) { %>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
            <li>
              <span class="user-status">Welcome, <%= user.username %></span>
            </li>
          <% } else { %>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
          <% } %>
        </ul>
        
        </ul>
        
      </nav>
    </header>

    <main><%- body %></main>

    <footer>
      <p>&copy; 2024 Recipe App</p>
    </footer>

    <script>
      document
        .querySelector(".hamburger")
        .addEventListener("click", function () {
          this.classList.toggle("active");
          document.querySelector(".nav-menu").classList.toggle("active");
        });
    </script>
    <%- script %>
  </body>
</html>
